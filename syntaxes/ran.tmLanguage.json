{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RAN",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#letter"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#comment"
				},
				{
					"include": "#comment_line"
				}
			]
		},
		"letter": {
			"name": "keyword.control.type",
			"match": "if|endif|while|endwhile|for|endfor|return|def|enddef|modname|import|export|break|continue|int|uint|short|ushort|char|byte|str|addr"
		},
		"strings": {
			"name": "string.quoted.double.hare",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.hare",
					"match": "\\\\."
				}
			]
		},
		"comment":{
			"name":"comment.block.ran",
			"begin": "\\/\\*",
			"end": "\\*\\/"
		},
		"comment_line":{
			"name":"comment.line.ran",
			"begin": "\\/\\/",
			"end": "\\n"
		}
	},
	"scopeName": "source.ran"
}