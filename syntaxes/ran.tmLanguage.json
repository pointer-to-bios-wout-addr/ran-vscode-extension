{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "RAN",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#letter"
				},
				{
					"include": "#comment_line"
				},
				{
					"include": "#comment_block"
				}
			]
		},
		"letter": {
			"name": "keyword.control.type",
			"match": "if|endif|while|endwhile|for|endfor|return|def|enddef|modname|import|export|break|continue|int|uint|short|ushort|char|byte|str|addr"
		},
		"comment_line": {
			"name": "comment.line.double-slash",
			"match": "\\s?(//.*)$"
		},
		"comment_block": {
			"name": "comment.block",
			"begin": "/*",
			"end": "*/"
		}
	},
	"scopeName": "source.ran"
}